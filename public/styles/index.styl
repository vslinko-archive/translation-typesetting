@import "nib"

red = #941100
yellow = #FFFFCC

global-reset()
reset-html5()

a
  color red

body
  margin 0
  font-family Roboto
  font-size 16px

.container
  width 100%
  margin 0 auto
  //background-color red

.header
  padding 0px 0px 0px 20px

  background-image linear-gradient(left, #ff0016, #f40116 40%)

  position relative

  box-shadow 0px 1px 5px rgba(0,0,0,0.8)

  clearfix()

.logo
  float left
  padding-top 12px
  font-size 24px
  font-weight 400
  color white
  text-shadow 0px 1px 0px #555

.content
  background-color white
  overflow-y auto

.title
  margin-bottom 30px
  font-size 64px
  font-weight bold

.signin-container
  height 100%
  padding 50px 20px 30px 20px
  background #f9f9f9

  .signin
    width 600px
    padding 20px 50px 30px 30px
    margin 0px auto

    border 1px solid #d2d2d2
    border-radius 8px

    background white

    box-shadow 0px 1px 1px rgba(0, 0, 0, 0.2)

    h1
      text-align center
      font-family Roboto
      font-weight 100

.signin-label
  display block
  margin-bottom 5px

.signin-input
  width 100%
  height 45px
  padding 0 10px
  border 1px solid gray
  margin-bottom 25px
  font-size 32px

  border 1px solid rgba(0, 0, 0, 0.2)
  box-shadow inset 0px 1px 5px rgba(0, 0, 0,0.1)
  padding 5px 8px

.signin-buttons
  text-align right

.signin-buttons-button
  display inline-block
  padding 10px 20px
  font-size 28px
  font-family Roboto
  font-weight 400
  background-color red
  color #e9e9e9
  cursor pointer

  background-image         linear-gradient(top, #ff2131, #d90000)

  text-shadow 0px -1px 0px #555

  box-shadow inset 0px -4px 4px rgba(0,0,0,0.4)
  border 1px solid #d9d9d9
          
  border-radius 10px

  &:hover
    background-image         linear-gradient(top, #fe545f, #d90000)

  &:active
    background-image         linear-gradient(top, #ff2131, #d90000)
    box-shadow inset 0px 4px 15px rgba(0, 0, 0, 0.6)

.footer
  padding 13px 30px
  border-top 2px solid #ff2131

.copyrights
  color white
  text-align right
  color #ff2131
  font-weight 400
  font-family Roboto
  font-size 16px

.nav
  float right

.nav-link
  display inline-block
  padding 16px 28px
  color #e9e9e9
  text-decoration none
  font-size 18px
  font-family Roboto
  font-weight 400

  text-shadow 0px -1px 0px #555

  &:first-child
    border-left 1px solid rgba(0, 0, 0, 0.15)

  &:last-child
    border-left 1px solid rgba(0, 0, 0, 0.15)
    border-right 1px solid rgba(0, 0, 0, 0.15)

  &:hover
    background-image         linear-gradient(top, #f60116, #d60202)

.translations
  width 100%

.translations-list
  height 100%
  padding 30px 20px
  background #f9f9f9

  .translations
    border 1px solid #d2d2d2
    border-radius 4px

    background white

    box-shadow 0px 1px 1px rgba(0, 0, 0, 0.2)

.translations-title
  padding 15px 0px 30px 25px
  border-bottom 1px solid rgba(0, 0, 0, 0.1)

.translations-row
  cursor pointer

  &:hover
    background rgba(0, 0, 0, 0.015)

.translations-cell
  padding 18px 0px 23px 25px
  font-size 24px

  a
    color #ff2131 

  border-bottom 1px solid rgba(0, 0, 0, 0.1)

.translation
  margin 0px

  .content
    overflow hidden

.translation-text
  padding 25px

.translation-html
  height 100%

  td:first-child
    width 50%
    padding 25px 15px 25px 25px
    border-right 1px solid #d9d9d9

  td:last-child
    width 50%
    position relative
    padding 25px 15px 0px 0px    
        
.translation-source
  width 50%
  vertical-align top
  padding-top 7px
  padding-right 15px
  padding-bottom 10px
  font-family Roboto
  line-height 1.5

.translation-translation
  width 50%
  vertical-align top
  padding-bottom 10px

.translation-translation-textarea
  width 95%
  font-size 16px
  font-family Roboto

  border 1px solid rgba(0, 0, 0, 0.2)
  box-shadow inset 0px 1px 5px rgba(0, 0, 0,0.1)
  padding 5px 8px
  line-height 1.5

.translation-break
  display block
  border none
  border-top 1px dashed #d9d9d9
  margin 10px 0 20px

.save-buttons
  position absolute
  right 15px
  bottom 55px
  z-index 1

  padding 4px

  border 1px solid rgba(255, 0, 0, 0.6)
  border-radius 3px

  background white

  box-shadow -1px 3px 3px rgba(0,0,0,0.3)

  .save-buttons-button
    display inline-block
    padding 6px 16px
    font-size 24px
    font-family Roboto
    font-weight 400
    background-color red
    color #e9e9e9
    cursor pointer

    background-image         linear-gradient(top, #ff2131, #d90000)

    text-shadow 0px -1px 0px #555

    box-shadow inset 0px -1px 4px rgba(0,0,0,0.4)
    border 1px solid #d9d9d9
          
    &:first-child
      border-radius 3px 0px 0px 3px
      margin-right 0px

    &:last-child
      border-radius 0px 3px 3px 0px
      margin-left 0px
      border-left 1px solid rgba(255, 0, 0, 0.8)

    &:hover
      background-image         linear-gradient(top, #fe6a74, #d90000)

    &:active
      background-image         linear-gradient(top, #ff2131, #d90000)
      box-shadow inset 0px 4px 15px rgba(0, 0, 0, 0.6)


.ace_editor
  top 0
  bottom 0
  right 0
  left 0

.ace_editor_wrapper
  position relative
  height 100%
